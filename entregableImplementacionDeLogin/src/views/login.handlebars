<main>
    <section class="login-section">
        <div class="container">
            <div class="title-container">
                <h1>Inicio de sessión</h1>
            </div>
            <div>
                <form action="/api/session/login" method="post" class="form">
                    <div class="form-field">
                        <label for="email" class="form-field_label">Correo electrónico:</label>
                        <input type="email" name="email" id="email" placeholder="Ingrese su correo electrónico" required class="form-field_input"/>
                    </div>
                    <div class="form-field">
                        <label for="password" class="form-field_label">Contraseña:</label>
                        <input type="password" name="password" id="password" placeholder="Ingresa tu contraseña" required class="form-field_input"/>
                    </div>
                    <div class="text-container">
                        <p>¿No estás registrado? Registrate dandole <a href="/register">click aquí</a>.</p>
                    </div>
                    <div class="btn-container">
                        <button type="submit" class="submit-btn">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>